---


import { CiMail } from "react-icons/ci";
import { RiLightbulbLine } from "react-icons/ri";
import { IoHelp } from "react-icons/io5";
import Layout from "../layouts/layout.astro";
---

<Layout>
  <main 
    class="flex flex-col w-[89.5%] h-[98%] bg-white mt-2 rounded-md border justify-center items-center gap-8 font-bold tracking-tighter text-3xl"
  >
    BestBuy Canada SKU Setup Portal
    <div class="flex gap-4">
      <div
        class="flex flex-col justify-center items-center w-32 h-32 border rounded-md shadow-sm hover:shadow-lg hover:scale-105 transition-all text-base font-normal tracking-tight gap-4"
      >
        New SKUs <RiLightbulbLine size={30} color="teal" />
      </div>
      <div
        class="flex flex-col justify-center items-center w-32 h-32 border rounded-md shadow-sm hover:shadow-lg hover:scale-105 transition-all text-base font-normal tracking-tight gap-4"
      >
        Contact <CiMail size={28} color="teal" />
      </div>
      <div
        class="flex flex-col justify-center items-center w-32 h-32 border rounded-md shadow-sm hover:shadow-lg hover:scale-105 transition-all text-base font-normal tracking-tight gap-4"
      >
        FAQs <IoHelp size={30} color="teal" />
      </div>
    </div>
  </main>
</Layout>
